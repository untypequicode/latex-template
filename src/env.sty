% env.sty --- Variables d'environnement du projet
% -----------------------------------------------------------------------------
% Copiez env.example.sty vers ce fichier et modifiez les valeurs selon vos besoins.
% Ce fichier déclare uniquement des variables via \providecommand.
% -----------------------------------------------------------------------------
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{env}[2025/11/19 v1.0 Project environment variables]

% ---------------------------------------------------------------------------
% Images et logo
% ---------------------------------------------------------------------------
\providecommand{\envGraphicPaths}{{img/}{images/}{assets/img/}}
\providecommand{\envLogoFile}{img/logo.png}
\providecommand{\envLogoScale}{0.20}

% ---------------------------------------------------------------------------
% Métadonnées du document
% ---------------------------------------------------------------------------
\providecommand{\envFaculty}{Nom de la faculté}
\providecommand{\envCourse}{Nom du cours}
\providecommand{\envTitle}{Titre du document}
\providecommand{\envAuthor}{Auteur.e.s du document}
\providecommand{\envRemise}{Date de remise}
\providecommand{\envRemiseFmt}{\envRemise}
\providecommand{\envProfessor}{Professeur.e.s du cours}
\providecommand{\envTeam}{Équipe de travail}

% ---------------------------------------------------------------------------
% Entrées de l'équipe (format tableau LaTeX)
% ---------------------------------------------------------------------------
\providecommand{\envTeamEntries}{%
  matricule1 & nom1 \\%
  matricule2 & nom2 \\%
}

% ---------------------------------------------------------------------------
% Alias de compatibilité pour les anciennes commandes
% ---------------------------------------------------------------------------
\providecommand{\cours}{\envCourse}
\providecommand{\titre}{\envTitle}
\providecommand{\auteur}{\envAuthor}
\providecommand{\remise}{\envRemiseFmt}
\providecommand{\professeur}{\envProfessor}
\providecommand{\equipe}{\envTeam}

% Macros d'affichage (nécessitent graphicx et float chargés dans le préambule)
\providecommand{\projectLogo}{\IfFileExists{\envLogoFile}{\includegraphics[scale=\envLogoScale]{\envLogoFile}}{\fbox{\begin{minipage}[c][3cm][c]{0.65\textwidth}\centering\textbf{Logo manquant}\\[4pt]\small\texttt{\envLogoFile}\end{minipage}}}}
\providecommand{\printTeamTable}{\begin{table}[H]\centering\begin{tabular}{|c|c|}\hline\textbf{Matricule} & \textbf{Nom} \\\hline \envTeamEntries \hline\end{tabular}\caption{Matricules et noms des membres de l'équipe}\end{table}}

\endinput
