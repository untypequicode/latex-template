% env.sty --- Project environment variables (local copy of env.example.sty)
% -----------------------------------------------------------------------------
% This file centralizes the values you will commonly change for the LaTeX
% template (logo, paths, document metadata, team entries).
%
% Recommended workflow:
%  - Keep `env.example.sty` in the repository as the reference.
%  - Copy `env.example.sty` to `src/env.sty` on your machine and edit this file
%    to set project-specific values (or create `src/local_env.tex` with
%    \renewcommand lines to override values without changing this file).
%
% Important: This file intentionally only declares variables via
% \providecommand so overrides with \renewcommand are safe and simple.
% It does NOT load packages or execute side effects.
% -----------------------------------------------------------------------------
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{env}[2025/11/19 v1.0 Project environment variables]

% ---------------------------------------------------------------------------
% Image / asset configuration
% ---------------------------------------------------------------------------
% A list suitable for \graphicspath (keep the double-brace form), e.g.:
%   {{img/}{images/}}
\providecommand{\envGraphicPaths}{{img/}{images/}{assets/img/}}

% The logo file to use on the title page (filename or relative path).
% Examples:
%   \renewcommand{\envLogoFile}{img/university-logo.png}
%   \renewcommand{\envLogoFile}{images/logo.pdf}
\providecommand{\envLogoFile}{img/logo.png}

% Scale applied to the logo when included with \includegraphics[scale=...]{...}
\providecommand{\envLogoScale}{0.20}

% ---------------------------------------------------------------------------
% Document metadata (change these to update headers/titlepage/etc.)
% ---------------------------------------------------------------------------
% Faculty / institution
\providecommand{\envFaculty}{Nom de la faculté}

% Course name or code
\providecommand{\envCourse}{Nom du cours}

% Main document title
\providecommand{\envTitle}{Titre du document}

% Author(s)
\providecommand{\envAuthor}{Auteur.e.s du document}

% Simple date string for submission / remise
\providecommand{\envRemise}{Date de remise}

% Optional formatted remise value (defaults to \envRemise)
\providecommand{\envRemiseFmt}{\envRemise}

% Professor(s) or instructor(s)
\providecommand{\envProfessor}{Professeur.e.s du cours}

% Team name or short description (used on the title page)
\providecommand{\envTeam}{Équipe de travail}

% ---------------------------------------------------------------------------
% Team / roster table entries
% ---------------------------------------------------------------------------
% Provide the content that will be inserted inside a tabular environment.
% Each line must end with \\ and respect LaTeX tabular formatting.
%
% Example override:
%   \renewcommand{\envTeamEntries}{%
%     123456 & Alice Exemple \\%
%     234567 & Bob Exemple   \\%
%   }
\providecommand{\envTeamEntries}{%
  matricule1 & nom1 \\%
  matricule2 & nom2 \\%
}

% ---------------------------------------------------------------------------
% Quick examples and guidance (copy into local_env.tex or into env.sty)
% ---------------------------------------------------------------------------
% Example: override several values (put these into src/local_env.tex or your
% document preamble if you prefer):
%
% \renewcommand{\envTitle}{Mon rapport de projet}
% \renewcommand{\envAuthor}{Prénom Nom}
% \renewcommand{\envLogoFile}{img/my-logo.png}
% \renewcommand{\envLogoScale}{0.18}
% \renewcommand{\envFaculty}{Faculté de Génie}
% \renewcommand{\envCourse}{INF-1234: Algorithmique}
% \renewcommand{\envTeamEntries}{%
%   201234 & Alice Exemple \\%
%   201235 & Bob Exemple   \\%
% }
%
% If you use \graphicspath in your preamble, you can apply:
%   \graphicspath\envGraphicPaths
% to use the configured search paths.
%
% ---------------------------------------------------------------------------
% Backwards-compatibility aliases
% ---------------------------------------------------------------------------
% Provide aliases named as in the original template so files that still use the
% old commands (\cours, \titre, \auteur, \remise, \professeur, \equipe, etc.)
% will continue to work. These aliases map to the new \env... variables.
%
% Note: these are simple \providecommand entries so they can be overridden by
% a local \renewcommand if necessary.
\providecommand{\cours}{\envCourse}
\providecommand{\titre}{\envTitle}
\providecommand{\auteur}{\envAuthor}
\providecommand{\remise}{\envRemiseFmt}
\providecommand{\professeur}{\envProfessor}
\providecommand{\equipe}{\envTeam}

% Aliases for previously used rendering macros. These provide the old macro
% names but rely on document-level packages (graphicx, float) being loaded in
% the preamble where they are actually used.
\providecommand{\projectLogo}{\IfFileExists{\envLogoFile}{\includegraphics[scale=\envLogoScale]{\envLogoFile}}{\fbox{\begin{minipage}[c][3cm][c]{0.65\textwidth}\centering\textbf{Logo manquant}\\[4pt]\small\texttt{\envLogoFile}\end{minipage}}}}
\providecommand{\printTeamTable}{\begin{table}[H]\centering\begin{tabular}{|c|c|}\hline\textbf{Matricule} & \textbf{Nom} \\\hline \envTeamEntries \hline\end{tabular}\caption{Matricules et noms des membres de l'équipe}\end{table}}

% ---------------------------------------------------------------------------
% End of env.sty
% -----------------------------------------------------------------------------
\endinput
