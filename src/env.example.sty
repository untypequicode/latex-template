%   201234 & Alice Exemple \\%
%   201235 & Bob Exemple   \\%
% }
%
% Si vous utilisez \graphicspath dans votre préambule, vous pouvez utiliser \envGraphicPaths ainsi :
%   \graphicspath\envGraphicPaths
%
% ---------------------------------------------------------------------------
% Fin de la configuration d'exemple
% -----------------------------------------------------------------------------
\endinput
